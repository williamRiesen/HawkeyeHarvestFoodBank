<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/constraintLayout"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="@color/design_default_color_background"
  tools:context=".volunteer.ConfirmOutOfStockFragment">


    <TextView
        android:id="@+id/textViewGoBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Go back."
        android:textColor="@color/plainText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonNo"
        app:layout_constraintTop_toTopOf="@+id/buttonNo" />

    <TextView
        android:id="@+id/textViewconfirmOutOfStockMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="32dp"
        android:layout_marginTop="32dp"
        android:layout_marginEnd="32dp"
        android:gravity="bottom"
        android:text="Are you out of this item?"
        android:textColor="@color/plainText"
        android:textSize="24sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLogoVolunteer" />

<TextView
    android:id="@+id/textViewManagerSection"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@color/fragmentBackground"
    android:fontFamily="@font/work_sans_medium"
    android:gravity="center"
    android:text="@string/volunteer_section"
    android:textColor="@color/logoHunterGreen"
    android:textSize="18sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/imageViewLogoVolunteer"
    app:layout_constraintTop_toBottomOf="@+id/textViewHawkeyeHarvestVolunteer" />

<ImageView
    android:id="@+id/imageViewLogoVolunteer"
    android:layout_width="106dp"
    android:layout_height="91dp"
    android:layout_marginStart="8dp"
    android:layout_marginTop="8dp"
    android:src="@drawable/ic_hawkeye_harvest_food_bank_logo"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintTop_toTopOf="parent" />

<TextView
    android:id="@+id/textViewHawkeyeHarvestVolunteer"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:background="@color/fragmentBackground"
    android:fontFamily="@font/goblin_one"
    android:gravity="center"
    android:text="@string/hawkeye_harvest"
    android:textColor="@color/logoHunterGreen"
    android:textSize="24sp"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintStart_toEndOf="@+id/imageViewLogoVolunteer"
    app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewOutOfStockItemName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:gravity="center"
        android:text="Out of Stock Item"
        android:textColor="@color/colorPrimary"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewconfirmOutOfStockMessage" />

    <Button
        android:id="@+id/buttonYes"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="32dp"
        android:text="Yes"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOutOfStockItemName" />

    <Button
        android:id="@+id/buttonNo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:text="No"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonYes" />

    <TextView
        android:id="@+id/textViewRemoveFromList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="4dp"
        android:text="Remove from list."
        android:textColor="@color/plainText"
        android:textSize="24sp"
        app:layout_constraintStart_toEndOf="@+id/buttonYes"
        app:layout_constraintTop_toTopOf="@+id/buttonYes" />
</androidx.constraintlayout.widget.ConstraintLayout>