<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:id="@+id/textViewOrderID"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Order ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textViewOrderRecievedMessage"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account ID"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewOrderID" />

    <CheckBox
        android:id="@+id/checkBox_packed"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textViewAccountID" />

    <CheckBox
        android:id="@+id/checkBox_delivered"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delivered"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/checkBox_packed" />
</androidx.constraintlayout.widget.ConstraintLayout>